/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  font-size: 32rpx;
  color: #333;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 全局变量 */
page {
  --primary-color: #1a1a1a;
  --secondary-color: #666;
  --success-color: #07c160;
  --warning-color: #ff9500;
  --error-color: #fa5151;
  --bg-color: #f5f5f5;
  --border-color: #e5e5e5;
  --text-primary: #333;
  --text-secondary: #666;
  --text-tertiary: #999;
}

/* 通用容器 */
.container {
  padding: 32rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 通用按钮 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.btn-primary {
  background: var(--primary-color);
  color: #fff;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  background: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-disabled {
  background: #e5e5e5;
  color: #999;
}

/* 通用文本 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-tertiary {
  color: var(--text-tertiary);
}

.text-center {
  text-align: center;
}

/* 通用间距 */
.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 32rpx;
}

.mt-large {
  margin-top: 48rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mb-large {
  margin-bottom: 48rpx;
}

/* 通用布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  color: var(--text-tertiary);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  color: var(--text-tertiary);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}
