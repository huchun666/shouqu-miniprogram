/* pages/bluetooth/connect/connect.wxss */
.header {
  padding: 32rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.status-card {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #38d9a9 100%);
  color: #fff;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-info {
  display: flex;
  flex-direction: column;
}

.status-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.device-name {
  font-size: 32rpx;
  font-weight: 600;
}

.disconnect-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 28rpx;
}

.scan-control {
  margin-bottom: 32rpx;
}

.control-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.scan-status {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.scan-status.scanning {
  color: #07c160;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.control-buttons {
  display: flex;
  gap: 16rpx;
}

.scan-btn,
.stop-btn,
.refresh-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 36rpx;
  font-size: 24rpx;
  border: none;
}

.scan-btn {
  background: var(--primary-color);
  color: #fff;
}

.scan-btn.scanning {
  background: #e5e5e5;
  color: #999;
}

.stop-btn {
  background: #fa5151;
  color: #fff;
}

.refresh-btn {
  background: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.devices-section {
  margin-bottom: 32rpx;
}

.device-list {
  margin-top: 24rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.device-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.device-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.device-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.device-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.device-id {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.device-rssi {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.device-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.connect-text {
  font-size: 28rpx;
  color: var(--primary-color);
}

.arrow {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.tips {
  margin-bottom: 32rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

.tip-item {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.tip-item:last-child {
  margin-bottom: 0;
}
