/* pages/navigation/navigation.wxss */
.nav-header {
  padding: 32rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.map-section {
  height: 500rpx;
  padding: 0;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.map {
  width: 100%;
  height: 100%;
}

.destination-section {
  margin-bottom: 32rpx;
}

.destination-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.destination-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 24rpx;
}

.destination-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.destination-arrow {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.destination-address {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-color);
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.route-info {
  margin-bottom: 32rpx;
}

.route-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.route-item:last-child {
  border-bottom: none;
}

.route-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.route-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.nav-status {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #fff;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
}

.bluetooth-status-text {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  background: rgba(7, 193, 96, 0.2);
  color: #07c160;
  border-radius: 12rpx;
}

.status-info {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.status-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.status-value {
  font-size: 36rpx;
  font-weight: 600;
}

.stop-nav-btn {
  width: 100%;
  height: 72rpx;
  background: rgba(250, 81, 81, 0.2);
  color: #fa5151;
  border: 1rpx solid rgba(250, 81, 81, 0.3);
  border-radius: 36rpx;
  font-size: 28rpx;
}

.nav-actions {
  padding: 32rpx;
}

.nav-btn {
  width: 100%;
  height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.nav-btn:active:not([disabled]) {
  opacity: 0.8;
}

.nav-btn[disabled] {
  opacity: 0.5;
}

.bluetooth-tip {
  margin-top: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: var(--text-tertiary);
}
