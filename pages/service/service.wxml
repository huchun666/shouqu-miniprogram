<!--pages/service/service.wxml-->
<view class="container">
  <view class="service-header">
    <text class="title">售后服务</text>
  </view>

  <view class="service-menu card">
    <view class="menu-item" bindtap="findStores">
      <view class="menu-left">
        <image class="menu-icon" src="/assets/icons/store.png"></image>
        <text class="menu-text">服务网点</text>
      </view>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="createRepair">
      <view class="menu-left">
        <image class="menu-icon" src="/assets/icons/repair.png"></image>
        <text class="menu-text">在线报修</text>
      </view>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="viewRepairs">
      <view class="menu-left">
        <image class="menu-icon" src="/assets/icons/list.png"></image>
        <text class="menu-text">报修记录</text>
      </view>
      <text class="menu-arrow">></text>
    </view>
  </view>
</view>
