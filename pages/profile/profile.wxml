<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card card">
    <view class="user-header" bindtap="editProfile">
      <image class="avatar" src="{{userInfo.avatar || '/assets/icons/avatar-default.png'}}" mode="aspectFill"></image>
      <view class="user-info">
        <text class="nickname">{{userInfo.nickname || '未登录'}}</text>
        <text class="phone" wx:if="{{userInfo.phone}}">{{userInfo.phone}}</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section card">
    <view class="menu-item" bindtap="myVehicles">
      <view class="menu-left">
        <image class="menu-icon" src="/assets/icons/vehicle.png"></image>
        <text class="menu-text">我的车辆</text>
      </view>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="settings">
      <view class="menu-left">
        <image class="menu-icon" src="/assets/icons/settings.png"></image>
        <text class="menu-text">设置</text>
      </view>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="about">
      <view class="menu-left">
        <image class="menu-icon" src="/assets/icons/about.png"></image>
        <text class="menu-text">关于</text>
      </view>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-section">
    <button class="logout-btn" bindtap="logout" wx:if="{{userInfo}}">退出登录</button>
  </view>
</view>
