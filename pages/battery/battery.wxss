/* pages/battery/battery.wxss */
.battery-header {
  padding: 32rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.battery-status-card {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #fff;
  margin-bottom: 32rpx;
}

.battery-display {
  text-align: center;
  margin-bottom: 24rpx;
}

.battery-level {
  font-size: 96rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
}

.battery-bar-large {
  height: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  overflow: hidden;
}

.battery-fill-large {
  height: 100%;
  background: linear-gradient(90deg, #07c160 0%, #38d9a9 100%);
  transition: width 0.3s;
}

.battery-status {
  text-align: center;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.status-text {
  font-size: 28rpx;
  opacity: 0.9;
}

.battery-info-section,
.battery-health-section,
.tips-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

.info-list {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.health-display {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.health-circle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #07c160 0%, #38d9a9 100%);
  color: #fff;
}

.health-value {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.health-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.health-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.health-item {
  display: flex;
  flex-direction: column;
}

.health-item-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.health-item-value {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.tip-list {
  display: flex;
  flex-direction: column;
}

.tip-item {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.tip-item:last-child {
  margin-bottom: 0;
}
