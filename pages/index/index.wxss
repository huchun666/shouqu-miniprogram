/* pages/index/index.wxss */
.status-card {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #fff;
  margin-bottom: 32rpx;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.vehicle-info {
  display: flex;
  flex-direction: column;
}

.vehicle-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.vehicle-model {
  font-size: 24rpx;
  opacity: 0.7;
}

.connection-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.connection-status.connected {
  background: rgba(7, 193, 96, 0.2);
  color: #07c160;
}

.connection-status.disconnected {
  background: rgba(250, 81, 81, 0.2);
  color: #fa5151;
}

.battery-section {
  margin-bottom: 32rpx;
}

.battery-info {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.battery-value {
  font-size: 64rpx;
  font-weight: 600;
}

.battery-label {
  font-size: 24rpx;
  opacity: 0.7;
}

.battery-bar {
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
}

.battery-fill {
  height: 100%;
  background: linear-gradient(90deg, #07c160 0%, #38d9a9 100%);
  transition: width 0.3s;
}

.info-grid {
  display: flex;
  justify-content: space-around;
  padding-top: 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.info-label {
  font-size: 24rpx;
  opacity: 0.7;
}

.quick-actions {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.action-item:active {
  background: #eeeeee;
  transform: scale(0.95);
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--text-primary);
}

.features {
  margin-bottom: 32rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
}

.feature-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-left {
  display: flex;
  align-items: center;
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.feature-text {
  font-size: 28rpx;
  color: var(--text-primary);
}

.feature-arrow {
  font-size: 28rpx;
  color: var(--text-tertiary);
}
