/* pages/vehicle/control/control.wxss */
.control-header {
  padding: 32rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.main-controls {
  margin-bottom: 32rpx;
}

.control-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.control-row:last-child {
  margin-bottom: 0;
}

.control-btn {
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  transition: all 0.3s;
}

.control-btn .btn-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.unlock-btn {
  background: linear-gradient(135deg, #07c160 0%, #38d9a9 100%);
}

.lock-btn {
  background: linear-gradient(135deg, #fa5151 0%, #ff7875 100%);
}

.start-btn {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
}

.stop-btn {
  background: linear-gradient(135deg, #ff9500 0%, #ffb84d 100%);
}

.control-btn.disabled {
  opacity: 0.5;
}

.control-btn:active:not(.disabled) {
  transform: scale(0.95);
}

.other-controls {
  margin-bottom: 32rpx;
}

.control-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.control-item:last-child {
  border-bottom: none;
}

.control-item-left {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.control-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.control-text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.control-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.control-arrow {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.bluetooth-section,
.bluetooth-status {
  margin-bottom: 32rpx;
}

.bluetooth-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bluetooth-info {
  display: flex;
  flex-direction: column;
}

.bluetooth-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.bluetooth-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.bluetooth-btn {
  padding: 12rpx 24rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  border: none;
}

.bluetooth-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #07c160;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
}

.status-tip {
  padding: 24rpx;
  text-align: center;
  color: var(--text-tertiary);
  font-size: 24rpx;
}
