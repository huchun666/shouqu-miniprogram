/* pages/vehicle/find/find.wxss */
.find-header {
  padding: 32rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.map-section {
  position: relative;
  height: 500rpx;
  margin-bottom: 32rpx;
  padding: 0;
  overflow: hidden;
}

.map {
  width: 100%;
  height: 100%;
}

.map-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  padding: 32rpx;
}

.location-info {
  display: flex;
  flex-direction: column;
}

.location-address {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.location-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-map {
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-tertiary);
  margin-bottom: 32rpx;
}

.actions {
  margin-bottom: 32rpx;
  padding: 0;
  background: transparent;
  box-shadow: none;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.action-btn:last-child {
  margin-bottom: 0;
}

.action-btn .btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.find-btn {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #fff;
}

.map-btn {
  background: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.action-btn:active:not([disabled]) {
  opacity: 0.8;
}

.action-btn[disabled] {
  opacity: 0.5;
}

.tips {
  margin-bottom: 32rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

.tip-item {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.tip-item:last-child {
  margin-bottom: 0;
}
