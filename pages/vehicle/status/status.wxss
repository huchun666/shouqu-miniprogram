/* pages/vehicle/status/status.wxss */
.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.online-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.online-status.online {
  background: rgba(7, 193, 96, 0.2);
  color: #07c160;
}

.online-status.offline {
  background: rgba(250, 81, 81, 0.2);
  color: #fa5151;
}

.status-content {
  padding: 0 32rpx;
}

.status-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

.battery-display {
  margin-bottom: 24rpx;
}

.battery-value {
  font-size: 72rpx;
  font-weight: 600;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 24rpx;
}

.battery-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.battery-fill {
  height: 100%;
  background: linear-gradient(90deg, #07c160 0%, #38d9a9 100%);
  transition: width 0.3s;
}

.battery-details {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--border-color);
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.info-value.locked {
  color: #fa5151;
}

.info-value.unlocked {
  color: #07c160;
}

.info-value.alarm-on {
  color: #ff9500;
}

.info-value.alarm-off {
  color: var(--text-secondary);
}

.location-info {
  display: flex;
  flex-direction: column;
}

.location-address {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.location-coords {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.other-info {
  display: flex;
  flex-direction: column;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-row .info-value {
  font-size: 28rpx;
  color: var(--text-primary);
}
