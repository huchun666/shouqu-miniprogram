/* pages/trip/record/record.wxss */
.statistics-card {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #fff;
  margin-bottom: 32rpx;
}

.stat-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.7;
}

.trip-list {
  margin-bottom: 32rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
  padding: 0 32rpx;
}

.trip-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  transition: all 0.3s;
}

.trip-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.trip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.trip-date .date-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.trip-duration {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.trip-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.info-text {
  font-size: 28rpx;
  color: var(--text-primary);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.trip-stats {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.stat-badge {
  display: flex;
  flex-direction: column;
  padding: 12rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  min-width: 120rpx;
}

.stat-badge .stat-label {
  font-size: 22rpx;
  color: var(--text-tertiary);
  margin-bottom: 4rpx;
}

.stat-badge .stat-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.loading-more,
.no-more {
  text-align: center;
  padding: 32rpx;
  color: var(--text-tertiary);
  font-size: 28rpx;
}
